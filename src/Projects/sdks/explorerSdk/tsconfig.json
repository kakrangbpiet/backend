{

    "compilerOptions": {
  
     "module": "ESNext",
     "moduleResolution": "node",
      "target": "es6",
  
      "strict": true,
  
      "esModuleInterop": true,
  
      "declaration": true,
  
      "outDir": "./dist",
  
      "sourceMap": true,
  
      "skipLibCheck": true,
  
      "forceConsistentCasingInFileNames": true
  
    },
  
    "include": ["src"],
  
    "exclude": ["node_modules", "dist"]
  
  }